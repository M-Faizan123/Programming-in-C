Q4 /*ACCEPT A CHARACTER FROM USER AND REVERSE THE CASE*/
#include <stdio.h>

int main()
{
	char ch;
	printf("Enter an Alphabate:");
	scanf ("%c" , &ch);
	if (ch>=65 && ch<=90)
		{
			ch=ch+32;
	printf("Reversed case of entered alphabate is %c",ch);
	return 0;
	}
	else if (ch>=97 && ch<=122)
	{	
		ch=ch-32;
	printf("Reversed case of entered alphabate is %c",ch);
	return 0;
	}
	else 
		printf("You have not entered a valid character");
	printf(ch);
	getch();
		return 0;
}

