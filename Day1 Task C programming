Q2 /*ACCEPT THREE NUMBERS FROM USER AND FIND OUT THE HIGHEST NUMBER*/

#include<stdio.h>
int main()
{
	int a,b,c;
	a=10;
	b=8;
	c=12;
	if (a>b && a>c)
		printf ("%d", a);
	else if (b>c)
		printf ("%d", b);
	else
		printf ("%d",c);
	getch ();
	return 0;
}

-------------------------------------------------------------------------------
Q2b /*ACCEPT THREE NUMBERS FROM USER AND FIND OUT THE HIGHEST NUMBER*/

#include<stdio.h>
int main()
{
	int a,b,c;
	a=15;
	b=8;
	c=12;
	if (a>b)
	{
		if(a>c)
			printf ("%d",a);
		else
			printf("%d",c);
	}
	else
	{
		if (b>c)
			printf ("%d",b);
		else
			printf("%d",c);
	}
	getch ();
	return 0;
}



