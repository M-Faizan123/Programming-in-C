@@ /*ACCEPT A NUMBER FROM USER AND DO THE MOD (%) BY 2 AND PRINT REMAINDER*/

#include <stdio.h>

int main()
{
	int no,c;
	printf("enter a number\n");

	scanf("%d" ,&no);
	{
	c=no%2;
	printf("%d", c);
		}
	getch();
		return 0;
}
