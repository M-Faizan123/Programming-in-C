Q3 /*ACCEPT A YEAR FROM USER AND CHECK IF IT IS A LEAP YEAR OR NOT*/

#include<stdio.h>
void main()
{
	int y;
	int flag=0;
	printf ("\n Enter year:");
	scanf ("%d",&y);
	if (y%4==0 && y%100!=0 || y%400==0)
		printf ("\nYear %d is a leap year", y);
	else
		printf ("\nYear %d is not a leap year",y);
	getch();
	return 0;
}

