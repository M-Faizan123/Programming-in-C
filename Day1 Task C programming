Q6 /*ACCEPT MARKS FROM USER AND PRINT GRADE*/


#include <stdio.h>

int main()
{
	int no;
	printf("enter marks\n");

	scanf("%d" ,&no);

	{
	if(no>=75)
	printf ("Grade A");

	else if(no>=55 && no<75)
	printf ("Grade B");

	else if(no>=35 && no<55)
	printf ("Grade C");

	else
	printf ("FAIL");
		}
	getch();
		return 0;
}

