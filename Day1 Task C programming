
Q1a  /*SWAP TWO VARIABLES WITHOUT USING 3rd VARIABLE*/

#include<stdio.h>
void main()
{
	int a,b;
	a=2;
	b=3;
	printf("%d %d",a,b);
	a=a+b;
	b=a-b;
	a=a-b;
	printf("%d %d",a,b);
getch();
return 0;
}

-------------------------------------------------------------------------------
Q1b /*SWAP TWO VARIABLES WITHOUT USING 3rd VARIABLE*/ X-OR operator

#include<stdio.h>
void main()
{
	int a,b;
	a=2;
	b=3;
	printf("%d %d",a,b);
	a=a^b;
	b=a^b;
	a=a^b;
	printf("%d %d",a,b);
getch();
return 0;
}


