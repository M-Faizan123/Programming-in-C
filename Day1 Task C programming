Q2c /*THREE NUMBER FROM USER AND PRINT HIGHEST NUMBER*/


#include <stdio.h>

int main()
{
	int a,b,c;
	printf("enter values");

	scanf("%d %d %d" ,&a,&b,&c);
	if(a>b)
	{
		if (a>c)
			printf("%d",a);
		else
			printf("%d",c);
	}
	else
	{
		if (b>c)
			printf("%d",b);
		else
			printf("%d",c);
	}
	getch();
		return 0;
}

