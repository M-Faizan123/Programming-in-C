Q9 /*ACCEPT A NUMBER FROM USER AND CHECK IF IT IS EVEN OR NOT*/ WITH MOD(%)

#include <stdio.h>

int main()
{
	int no,c;
	printf("enter a number\n");

	scanf("%d" ,&no);
	{
	if (no%2==0)
	printf ("Number is even");
	else
printf ("Number is odd");
			}
	getch();
		return 0;
}

-------------------------------------------------------------------------------
Q9b /*ACCEPT A NUMBER FROM USER AND CHECK IF IT IS EVEN OR NOT*/ WITHOUT MOD OPERATOR

#include <stdio.h>

int main()
{
	int no,	q;
	printf("enter a number\n");
	scanf("%d" ,&no);
	q=no/2;
		if (q*2==no)
printf("Number is EVEN");
		else
			printf("Number is ODD");
	getch();
		return 0;
}

-------------------------------------------------------------------------------
Q9c /*ACCEPT A NUMBER FROM USER AND CHECK IF IT IS EVEN OR NOT */ BIT WISE (&) OPERATOR

#include <stdio.h>

int main()
{
	int no,	q;
	printf("enter a number\n");
	scanf("%d" ,&no);
	q=no&1;
		if (q==0)
printf("Number is EVEN");
		else
			printf("Number is ODD");
	getch();
		return 0;
}
