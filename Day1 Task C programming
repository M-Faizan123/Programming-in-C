Q5 /*ACCEPT A CHARACTER FROM USER AND CHECK IF IT IS A VOWEL OR NOT*/ ##PENDING##
#include<stdio.h>
#include<conio.h>
void main()
{
	char ch;
	clrscr();
	printf ("Enter a Character:");
	scanf("%c" ,&ch);
	(ch==65||ch==97||ch==69||ch==101||ch==73||ch==105||ch==79||ch==111||ch==85||ch==117);
	printf("Character is Vowel");
	printf("Character is Not Vowel");
	getch;
}
if (ch==65||ch==97||ch==69||ch==101||ch==73||ch==105||ch==79||ch==111||ch==85||ch==117)
	printf("Character is Vowel");
else printf("Character is Not Vowel");
	getch;
	return 0;
}









